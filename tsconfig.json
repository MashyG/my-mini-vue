{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2016",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["jest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@mashy-mini-vue/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/__tests__"]
}
